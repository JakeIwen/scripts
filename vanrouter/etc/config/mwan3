config member 'wan_m1_w3'
	option interface 'wan'
	option metric '1'
	option weight '3'

config member 'lifiwan_m1_w3'
	option interface 'lifiwan'
	option metric '1'
	option weight '3'

config member 'clientwan_m1_w2'
	option interface 'clientwan'
	option metric '1'
	option weight '2'

config policy 'balanced'
	list use_member 'wan_m1_w3'
	list use_member 'usbwan_m1_w2'
	list use_member 'lifiwan_m1_w3'
	list use_member 'clientwan_m1_w2'

config rule 'https'
	option sticky '1'
	option dest_port '443'
	option proto 'tcp'
	option use_policy 'balanced'

config rule 'default_rule_v4'
	option dest_ip '0.0.0.0/0'
	option use_policy 'balanced'
	option family 'ipv4'

