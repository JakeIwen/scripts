alias l="ls -lah"
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."

alias hgrep="history | grep"
alias pgrep="ps lT | grep"


mkcdir ()
{
   mkdir -p -- "$1" &&
     cd -P -- "$1"
}

copy_profile ()
{
 ssid=$(iwgetid -r)
 cp /tmp/system.cfg "/etc/persistent/$ssid"
}

save_cfg ()
{
 ssid=$(wgetid -r)
 cp /tmp/system.cfg /etc/persistent/config/profiles/"$ssid".cfg
}
