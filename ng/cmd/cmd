opkg update
opkg install bash
sed -i 's/ash/bash/g' /etc/passwd
opkg install curl
curl -o /bin/rmate https://raw.githubusercrmateontent.com/aurora/rmate/master/rmate
chmod +x /bin/rmate
(start remote-atom server)
ssh -R 52698:localhost:52698 root@192.168.6.1



