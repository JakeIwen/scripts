
config globals 'globals'
	option mmx_mask '0x3F00'
	option local_source 'lan'

config interface 'wan'
	option enabled '1'
	list track_ip '8.8.4.4'
	list track_ip '8.8.8.8'
	list track_ip '208.67.222.222'
	list track_ip '208.67.220.220'
	option family 'ipv4'
	option reliability '2'
	option count '1'
	option timeout '2'
	option failure_latency '1000'
	option recovery_latency '500'
	option failure_loss '20'
	option recovery_loss '5'
	option interval '5'
	option down '3'
	option up '4'

config interface 'cwan'
	option family 'ipv4'
	option reliability '1'
	option count '1'
	option timeout '2'
	option interval '5'
	option down '3'
	option up '4'
	option initial_state 'online'
	option track_method 'ping'
	option size '56'
	option check_quality '0'
	option failure_interval '5'
	option recovery_interval '5'
	option flush_conntrack 'always'
	option enabled '1'

config interface 'uwan'
	list track_ip '8.8.8.8'
	list track_ip '208.67.220.220'
	option family 'ipv4'
	option reliability '1'
	option count '1'
	option timeout '2'
	option interval '5'
	option down '3'
	option up '4'
	option enabled '1'
	option initial_state 'online'
	option track_method 'ping'
	option size '56'
	option check_quality '0'
	option failure_interval '5'
	option recovery_interval '5'
	option flush_conntrack 'never'

config member 'wan_m1_w3'
	option interface 'wan'
	option metric '1'
	option weight '3'

config member 'wan_m2_w3'
	option interface 'wan'
	option metric '2'
	option weight '3'

config member 'uwan_m1_w2'
	option interface 'uwan'
	option metric '1'
	option weight '2'

config member 'uwan_m2_w2'
	option interface 'uwan'
	option metric '2'
	option weight '2'

config member 'cwan_m1_w2'
	option interface 'cwan'
	option metric '1'
	option weight '2'

config member 'cwan_m2_w2'
	option interface 'cwan'
	option metric '2'
	option weight '2'

config policy 'wan_only'
	list use_member 'wan_m1_w3'

config policy 'uwan_only'
	list use_member 'uwan_m1_w2'

config policy 'cwan_only'
	list use_member 'cwan_m1_w2'

config policy 'balanced'
	list use_member 'wan_m1_w3'
	list use_member 'uwan_m1_w2'
	list use_member 'cwan_m1_w2'

config policy 'wan_uwan'
	list use_member 'wan_m1_w3'
	list use_member 'uwan_m2_w2'

config policy 'uwan_wan'
	list use_member 'wan_m2_w3'
	list use_member 'uwan_m1_w2'

config rule 'https'
	option sticky '1'
	option dest_port '443'
	option proto 'tcp'
	option use_policy 'balanced'

config rule 'default_rule'
	option dest_ip '0.0.0.0/0'
	option use_policy 'balanced'

