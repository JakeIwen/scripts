#!/bin/sh

date > /etc/persistent/log

mkdir -p /etc/crontabs
touch /etc/crontabs/ubnt

echo "* * * * *     /etc/persistent/config/update_wifi.sh >> /etc/persistent/config/update_wifi.log" >> /etc/crontabs/ubnt
echo "0 * * * *     /etc/persistent/config/truncate_file.sh /etc/persistent/config/update_wifi.log 5000" >> /etc/crontabs/ubnt
echo " " >> /etc/crontabs/ubnt

crond
